## Commons ##
# Collection
GET     /seller/:sellerId/itemsJson     	controllers.SellerController.itemsOwnedBy(sellerId: Long)
GET     /seller/:sellerId/items     		controllers.SellerController.listItems(sellerId: Long)
GET     /seller/:sellerId/collections     	controllers.SellerController.listCollections(sellerId: Long)

# Item
GET		/items								controllers.ItemController.index()
GET		/item								controllers.ItemController.form()
GET		/item/:itemId						controllers.ItemController.read(itemId: String)
POST	/item								controllers.ItemController.submit()
POST	/item/:itemId						controllers.ItemController.delete(itemId: String)
PUT		/item/:itemId						controllers.ItemController.update(itemId: String)

# Recommendations
GET        /reco	           				controllers.RecommendationEngine.recoExample()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file        				controllers.Assets.at(path="/public", file)
GET		/javascriptRoutes     				controllers.Application.javascriptRoutes

