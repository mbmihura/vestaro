# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET        /aboutplay           controllers.Application.aboutPlay()
GET        /                    controllers.Application.index()

# Seller
GET     /seller/:sellerId/items     controllers.Sellers.listItems(sellerId: Long)

# Item
POST	/item					controllers.Items.create()
GET		/item/:itemId			controllers.Items.read(itemId: String)
PUT		/item/:itemId			controllers.Items.update(itemId: String)
POST	/item/:itemId			controllers.Items.delete(itemId: String)

# Map static resources from the /public folder to the /assets URL path
GET        /assets/*file        controllers.Assets.at(path="/public", file)
