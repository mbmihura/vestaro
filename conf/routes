# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET		/aboutplay           				controllers.Application.aboutPlay()
GET		/                    				controllers.Application.index()

# Authentication & Authorization
POST	/authentication/login 				controllers.Authentication.login()

#TODO: check if really necesarry as we will be using fbLogin
POST	/authentication/logout      		controllers.Authentication.logout() 

# Seller

GET     /seller/:sellerId/items     controllers.Sellers.listItems(sellerId: Long)
GET     /seller/:sellerId/collections     controllers.Sellers.listCollections(sellerId: Long)

#Buyer
GET		/buyer/orders			controllers.Buyer.orders()

# Item
GET		/items					controllers.Items.index()
GET		/item					controllers.Items.form()
POST	/item					controllers.Items.submit()
GET		/item/:itemId			controllers.Items.read(itemId: String)
PUT		/item/:itemId			controllers.Items.update(itemId: String)
POST	/item/:itemId			controllers.Items.delete(itemId: String)

# Payment Process
GET		/buy/:itemId				controllers.Items.buy(itemId: String)
POST	/orderItem					controllers.Items.orderItem(itemId: String, size: String, pointsUsed: Integer)
GET 	/payment/success/:orderId 	controllers.Payment.success(orderId:Long)
GET 	/payment/error/:orderId 	controllers.Payment.error(orderId:Long)

# Other
GET		/facebookPlugins		controllers.Application.facebookPlugins()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file        	controllers.Assets.at(path="/public", file)
GET		/javascriptRoutes     	controllers.Application.javascriptRoutes

