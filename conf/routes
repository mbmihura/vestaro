# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET        /aboutplay           controllers.Application.aboutPlay()
GET        /                    controllers.Application.index()
GET        /dashboard			controllers.Dashboards.index()
GET        /list                controllers.Application.list()
GET        /detail              controllers.Application.detail()


# Seller
GET     /seller/:sellerId/items     controllers.Sellers.listItems(sellerId: Long)

# Item
GET		/item					controllers.Items.form()
POST	/item					controllers.Items.submit()
GET		/item/:itemId			controllers.Items.read(itemId: String)
PUT		/item/:itemId			controllers.Items.update(itemId: String)
POST	/item/:itemId			controllers.Items.delete(itemId: String)

# Map static resources from the /public folder to the /assets URL path
GET        /assets/*file        controllers.Assets.at(path="/public", file)
