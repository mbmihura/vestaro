# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET        /aboutplay           controllers.Application.aboutPlay()
GET        /                    controllers.Application.index()

# Dashboard
GET		/dashboardTest			controllers.Dashboard.dashboardTest()
GET		/mostBuyedItems/:sellerId			controllers.Dashboard.mostBuyedItems(sellerId: Long)
GET		/biggestCollections/:sellerId		controllers.Dashboard.biggestCollections(sellerId: Long)

# Seller
GET     /seller/:sellerId/items     controllers.Sellers.listItems(sellerId: Long)
GET     /seller/:sellerId/collections     controllers.Sellers.listCollections(sellerId: Long)

# Item
GET		/items					controllers.Items.index()
GET		/item					controllers.Items.form()
POST	/item					controllers.Items.submit()
GET		/item/:itemId			controllers.Items.read(itemId: String)
PUT		/item/:itemId			controllers.Items.update(itemId: String)
POST	/item/:itemId			controllers.Items.delete(itemId: String)

# Other
GET		/facebookPlugins		controllers.Application.facebookPlugins()

# Recommendations
GET        /reco	           controllers.RecommendationEngine.recoExample()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file        	controllers.Assets.at(path="/public", file)
GET		/javascriptRoutes     	controllers.Application.javascriptRoutes